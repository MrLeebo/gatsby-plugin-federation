{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["es2020", "dom"],
    "types": ["node"],
    "outDir": "./out",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "remote/*": ["../remote/*"]
    }
  },
  "exclude": ["node_modules", ".cache", "public"]
}
